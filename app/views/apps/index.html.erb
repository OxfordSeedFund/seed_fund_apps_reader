<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Full List of Applications</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
        </li>
        <li class="active">
            <strong>apps</strong>
        </li>
    </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <% for app in @apps %>
        <div class="col-lg-4">
            <div class="contact-box">
                <a href="<%= app_path(app) %>">
                <div class="col-sm-12">
                    <h5><strong>Application <%= app.id %></strong></h3>
                    <h3><strong><%= app.company_name %></strong></h3>
                    <p><i class="fa fa-user"></i> <%= app.founder_name %></p>
                    <address>
                       <abbr title="Email">E:</abbr> <%= app.founder_email %><br>
                        <abbr title="Phone">P:</abbr> <%= app.founder_phone %>
                    </address>
                    <p><strong>Seed Fund Members: </strong><% for member in app.members %><%= member.name %> <% end %></p>
                </div>
                <div class="clearfix"></div>
            </a>
            </div>
        </div>
    <% end %>
</div>
</div>

<% content_for :javascript do %>
    <script type="text/javascript">

    $(function () {
        $('.contact-box').each(function () {
            animationHover(this, 'pulse');
        });
    });
    </script>
<% end %>

